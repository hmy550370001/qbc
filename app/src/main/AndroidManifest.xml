            android:theme="@style/theme_fullScreen" />
        <activity
            android:name=".Activity.Mainactivity"
            android:screenOrientation="landscape"
            android:theme="@style/theme_fullScreen" />
        <activity
            android:name=".Activity.TestActivity"
