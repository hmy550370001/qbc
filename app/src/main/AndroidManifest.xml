        <activity
            android:name=".Activity.Adjustsetactivity"
            android:screenOrientation="landscape"
            android:theme="@style/theme_fullScreen" />
        <activity
            android:name=".Activity.Timesetactivity"
            android:screenOrientation="landscape"
            android:theme="@style/theme_fullScreen" />
        <activity
            android:name=".Activity.Restoresetactivity"
            android:screenOrientation="landscape"
            android:theme="@style/theme_fullScreen" />
        <activity
            android:name=".Activity.Lightsetactivity"
            android:screenOrientation="landscape"
            android:theme="@style/theme_fullScreen" />
        <activity
            android:name=".Activity.Closeactivity"
            android:label="@string/title_activity_closeactivity" />
