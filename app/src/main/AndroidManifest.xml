            android:theme="@style/theme_fullScreen" />
        <activity
            android:name=".Activity.Showresultactivity"
            android:screenOrientation="landscape"
            android:theme="@style/theme_fullScreen" />
        <activity
            android:name=".Activity.queryresultactivity"
            android:screenOrientation="landscape"
            android:theme="@style/theme_fullScreen" />
        <activity
            android:name=".Activity.parametersetting"
